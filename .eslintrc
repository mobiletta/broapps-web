{
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "allowImportExportEverywhere": false,
    "codeFrame": true
  },
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [["@", "./src"]]
      },
      "node": {
        "moduleDirectory": ["node_modules", "src/"]
      }
    }
  },
  "plugins": ["react-hooks"],
  "rules": {
    "strict": 0,
    
    "max-len": ["error", { "code": 250 }],
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn"
  }
}
